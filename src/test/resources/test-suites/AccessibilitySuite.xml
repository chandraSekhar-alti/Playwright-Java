<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="API-Test-Suites" time-out="300000" verbose="2" >
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg" />
    </listeners>
    <!--    <test name="API tests" parallel="true" thread-count="4">-->
    <test name="Accessibility testing module">
        <classes>
            <class name="Accessibility.Tests.LoginAccessibilityTests">
                <methods>
                    <include name="shouldNotHaveAutomaticallyDetectableAccessibilityIssues"/>
                    <include name="credentialsContainerShouldNotHaveAnyAccessibilityIssues"/>
                    <include name="loginHeaderShouldNotHaveAnyAccessibilityIssues"/>
                </methods>
            </class>

            <class name="Accessibility.Tests.HomePageAccessibilityTests">
                <methods>
                    <include name="shouldNotHaveAutomaticallyDetectableAccessibilityIssues"/>
                    <include name="footerSectionShouldNotHaveAutomaticallyDetectableAccessibilityViolations"/>
                </methods>
            </class>

            <class name="Accessibility.Tests.CartPageAccessibilityTests">
                <methods>
                    <include name="navigationToCartPageShouldNotHaveAutomaticallyDetectableAccessibilityViolations"/>
                    <include name="headerOfCartPageShouldNotHaveAnyAccessibilityViolations"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>